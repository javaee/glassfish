<ejb-jar>
    <display-name>SimpleBMPJAR</display-name>
    <enterprise-beans>

        <!-- Simple EJB -->
        <entity>
            <display-name>SimpleBMPEJB</display-name>
            <ejb-name>SimpleBMPEJB</ejb-name>
            <home>com.sun.s1asdev.jdbc.markconnectionasbad.local.ejb.SimpleBMPHome</home>
            <remote>com.sun.s1asdev.jdbc.markconnectionasbad.local.ejb.SimpleBMP</remote>
            <ejb-class>com.sun.s1asdev.jdbc.markconnectionasbad.local.ejb.SimpleBMPBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>False</reentrant>
            <security-identity>
                <description></description>
                <use-caller-identity></use-caller-identity>
            </security-identity>
            <resource-ref>
                <res-ref-name>DataSource</res-ref-name>
                <res-type>javax.sql.DataSource</res-type>
                <res-auth>Container</res-auth>
                <res-sharing-scope>Shareable</res-sharing-scope>
            </resource-ref>
            <resource-ref>
                <res-ref-name>UnshareableDataSource</res-ref-name>
                <res-type>javax.sql.DataSource</res-type>
                <res-auth>Container</res-auth>
                <res-sharing-scope>Unshareable</res-sharing-scope>
            </resource-ref>
        </entity>
    </enterprise-beans>

    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>SimpleBMPEJB</ejb-name>
                <method-name>test1</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>

        <container-transaction>
            <method>
                <ejb-name>SimpleBMPEJB</ejb-name>
                <method-name>test2</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>

        <container-transaction>
            <method>
                <ejb-name>SimpleBMPEJB</ejb-name>
                <method-name>test3</method-name>
            </method>
            <trans-attribute>NotSupported</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>SimpleBMPEJB</ejb-name>
                <method-name>test4</method-name>
            </method>
            <trans-attribute>NotSupported</trans-attribute>
        </container-transaction>

         <container-transaction>
            <method>
                <ejb-name>SimpleBMPEJB</ejb-name>
                <method-name>test5</method-name>
