<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE project [
<!ENTITY commonSetup SYSTEM "./../../../config/properties.xml">
<!ENTITY commonBuild SYSTEM "./../../../config/common.xml">
<!ENTITY run SYSTEM "./../../../config/run.xml">
<!ENTITY testproperties SYSTEM "./build.properties">
]>

<project name="webcontainer_unittest" default="all" basedir=".">

    &commonSetup;
    &commonBuild;
    &testproperties;
    &run;

    <target name="all" depends="setup,build,deploy,runfirst,updatehosts,runsecond,undeploy,restore"/>

    <target name="clean" depends="init-common">
      <antcall target="clean-common"/>
    </target>
       
    <target name="compile" depends="clean">
        <antcall target="compile-common">
            <param name="src" value="servlet"/>
        </antcall>
    </target>

    <target name="build" depends="compile">
        <property name="hasWebclient" value="yes"/> 
        <antcall target="webclient-war-common">
            <param name="hasWebclient" value="yes"/>
            <param name="webclient.war.classes" value="**/*.class"/> 
        </antcall>

        <javac srcdir="." classpath="${env.APS_HOME}/lib/reporter.jar"
               includes="WebTest.java"/>
    </target> 
    
    <target name="setup" depends="init-common">
        <antcall target="create-virtual-server"/>
    </target>

    <target name="build-publish-war" depends="build, publish-war-common" />

    <target name="deploy" depends="init-common">
        <antcall target="deploy-war-common"/>
    </target>

    <target name="runfirst" depends="init-common">
        <java classname="WebTest">
          <arg value="${http.host}"/>
          <arg value="${http.port}"/>
          <arg value="${contextroot}"/>
          <arg value="first"/>
          <classpath>
           <pathelement location="${env.APS_HOME}/lib/reporter.jar"/>
           <pathelement location="."/>
         </classpath>
        </java>
    </target>

    <target name="runsecond" depends="init-common">
        <java classname="WebTest">
          <arg value="${http.host}"/>
          <arg value="${http.port}"/>
          <arg value="${contextroot}"/>
          <arg value="second"/>
          <classpath>
           <pathelement location="${env.APS_HOME}/lib/reporter.jar"/>
           <pathelement location="."/>
         </classpath>
        </java>
    </target>
 
    <target name="undeploy" depends="init-common">
        <antcall target="undeploy-war-common"/>
    </target>   

    <target name="create-virtual-server" depends="init-common">
        <exec executable="${ASADMIN}">
            <arg line="create-virtual-server"/>
            <arg line="-u ${admin.user}"/>
            <arg line="--port ${admin.port}"/>
            <arg line="--hosts myhost" />
            <arg line="myvs" />
        </exec>
        <antcall target="asadmin-common-ignore-fail">
            <param name="admin.command" value="set" />
            <param name="operand.props"
                   value="${appserver.instance.name}.http-service.virtual-server.myvs.http-listeners=http-listener-1"/>
        </antcall>
    </target>

    <target name="updatehosts" depends="init-common">
        <antcall target="asadmin-common-ignore-fail">
            <param name="admin.command" value="set" />
            <param name="operand.props"
                   value="${appserver.instance.name}.http-service.virtual-server.myvs.hosts=mynewhost"/>
        </antcall>
    </target>

    <target name="delete-virtual-server" depends="init-common">
        <exec executable="${ASADMIN}">
            <arg line="delete-virtual-server"/>
            <arg line="-u ${admin.user}"/>
            <arg line="--port ${admin.port}"/>
            <arg line="myvs" />
        </exec>
    </target>

    <target name="restore" depends="init-common">
        <antcall target="delete-virtual-server"/>
    </target>

    <target name="usage">
        <antcall target="usage-common"/>
    </target>
</project>
