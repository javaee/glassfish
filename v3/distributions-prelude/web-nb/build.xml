<project name="glassfish web-nb distribution creation" default="create.distribution" basedir=".">
    <target name="create.distribution">
        <echo message="Creating distribution: web-nb"/>
        <unzip dest="target/stage">
            <fileset dir="target/stage">
                <include name="*.zip"/>
                <exclude name="nucleus-base*.zip"/>
            </fileset>
        </unzip>
        <delete dir="target/stage" includes="*.zip"/>

        <chmod file="target/stage/glassfishv3-ea/bin/*" perm="ugo+rx"/>
        <chmod file="target/stage/glassfishv3-ea/glassfish/bin/*" perm="ugo+rx"/>

        <!-- create domain -->
        <!-- ant antfile="../distributions.xml" target="create-domain">
            <property name="exec.dir" value="${basedir}/target/stage/glassfishv3-ea/glassfish/bin"/>
            <property name="exec.executable" value="${basedir}/target/stage/glassfishv3-ea/glassfish/bin/asadmin"/>
        </ant -->

        <!-- create distribution zip-->
        <exec dir="target/stage" executable="zip">
            <arg line= "-r ../web-nb.zip glassfishv3-ea"/>
        </exec>

        <!-- deploy distribution artifact to maven repository" -->
        <attachArtifact file="target/web-nb.zip"/>
   </target>
</project>
