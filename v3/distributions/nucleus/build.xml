<project name="nucleus bundle creation" default="create.bundle" basedir=".">
   <target name="create.bundle">
       <mkdir dir="target/stage"/>

       <resolveArtifact artifactId="nucleus-base" property="nucleus-base.zip"/>
       <resolveArtifact artifactId="felix" groupId="org.glassfish.osgi-platforms" property="felix.zip"/>
       <resolveArtifact artifactId="equinox" groupId="org.glassfish.osgi-platforms" property="equinox.zip"/>
       <resolveAll todir="target/stage/glassfish/modules" stripVersion="true">
         <scope level="compile,runtime" />
       </resolveAll>

       <delete dir="target/stage/glassfish/modules" includes="*.zip" />
       <delete dir="target/stage/glassfish/modules" includes="*.pom" />
        
        <graphDef id="generate-picture">
            <visualize file="modules.png">
                <scope level="compile,runtime"/>
            </visualize>
        </graphDef>

       <zip file="target/nucleus.zip" basedir="target/stage">
           <zipgroupfileset file="${nucleus-base.zip}"/>
           <zipgroupfileset file="${felix.zip}"/>
           <zipgroupfileset file="${equinox.zip}"/>
       </zip>
       <attachArtifact file="target/nucleus.zip"/>
   </target>
</project>

